<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
     <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <text
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Description"
                        name="./text" />
                    <selectStyle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Style"
                            name="./styleTitle">
                        <items jcr:primaryType="nt:unstructured">
                            <uppercase jcr:primaryType="nt:unstructured"
                                     text="Uppercase"
                                     value="uppercase"/>
                            <title jcr:primaryType="nt:unstructured"
                                       text="Title"
                                       value="title"/>
                            <titleLogin jcr:primaryType="nt:unstructured"
                                   text="Title Login"
                                   value="title-login"/>
                            <message jcr:primaryType="nt:unstructured"
                                   text="Message"
                                   value="message"/>
                            <messageLogin jcr:primaryType="nt:unstructured"
                                     text="Message Login"
                                     value="message-login"/>
                            <titletText jcr:primaryType="nt:unstructured"
                                   text="Label"
                                   value="title-text"/>
                        </items>
                    </selectStyle>
                    <selectStyleColor
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Text Color"
                            name="./color">
                        <items jcr:primaryType="nt:unstructured">
                            <black jcr:primaryType="nt:unstructured"
                                       text="Black"
                                       value="#333333"/>
                            <white jcr:primaryType="nt:unstructured"
                                   text="Gray"
                                   value="#E0E0E0"/>
                        </items>
                    </selectStyleColor>
                    <selectStyleFont
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Font"
                            name="./font">
                        <items jcr:primaryType="nt:unstructured">
                            <markPro jcr:primaryType="nt:unstructured"
                                   text="Mark Pro"
                                   value="Mark Pro"/>
                            <monospace jcr:primaryType="nt:unstructured"
                                   text="Monospace"
                                   value="monospace"/>
                        </items>
                    </selectStyleFont>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
